{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "Config": {
    "VnExpressConfig": {
      "BaseUrl": "https://vnexpress.net",
      "CommentApiUrl": "https://usi-saas.vnexpress.net/index/get",
      "MaxConcurrentCategories": 1,
      "MaxConcurrentPages": 1,
      "MaxConcurrentArticles": 1,
      "MinDelayBetweenPagesInMilliseconds": 1500,
      "MinDelayBetweenArticlesInMilliseconds": 500,
      "HttpClientConfig": {
        "MaxRetry": 5,
        "MinRetryDelayInMilliseconds": 500,
        "HttpRequestTimeoutInSeconds": 15
      }
    },
    "TuoiTreConfig": {
      "BaseUrl": "https://tuoitre.vn",
      "CommentApiUrl": "https://id.tuoitre.vn/api/getlist-comment.api",
      "MaxConcurrentPages": 1,
      "MaxConcurrentArticles": 1,
      "MinDelayBetweenPagesInMilliseconds": 1500,
      "MinDelayBetweenArticlesInMilliseconds": 500,
      "RateLimiter": {
        "TokenLimit": 50,
        "QueueLimit": 1000,
        "ReplenishmentPeriodSeconds": 1
      },
      "HttpClientConfig": {
        "MaxRetry": 5,
        "MinRetryDelayInMilliseconds": 500,
        "HttpRequestTimeoutInSeconds": 15
      }
    },
    "CrawlerCronJobConfig": {
      "IntervalMinutes": 15,
      "InitialDelaySeconds": 0,
      "CrawlDayRange": 7
    }
  },
  "AllowedHosts": "*"
}
