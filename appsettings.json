{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "Config": {
    "VnExpressConfig": {
      "BaseUrl": "https://VnExpress.net",
      "CommentApiUrl": "https://usi-saas.VnExpress.net/index/get",
      "MaxConcurrentCategories": 1,
      "MaxConcurrentPages": 1,
      "MaxConcurrentArticles": 1,
      "RateLimiter": {
        "TokenLimit": 100,
        "QueueLimit": 10000,
        "ReplenishmentPeriodSeconds": 1
      }
    },
    "TuoiTreConfig": {
      "BaseUrl": "https://TuoiTre.vn",
      "CommentApiUrl": "https://id.TuoiTre.vn/api/getlist-comment.api",
      "MaxConcurrentPages": 1,
      "MaxConcurrentArticles": 1,
      "RateLimiter": {
        "TokenLimit": 50,
        "QueueLimit": 1000,
        "ReplenishmentPeriodSeconds": 1
      }
    },
    "CrawlerCronJobConfig": {
      "IntervalMinutes": 15,
      "InitialDelaySeconds": 0,
      "CrawlDayRange": 7
    }
  },
  "AllowedHosts": "*"
}
